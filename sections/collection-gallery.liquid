  }
  .collection-gallery .title h2 {
      margin: 0 0 50px 0;
      font-size: 26px;
  }
  .collection-gallery .picture-box .col {
      flex: 0 0 100%;
      max-width: 100%;
  }
  .collection-gallery .holiday-box .cbtns {
      width: 35px;
      height: 35px;
  }
  .collection-gallery .holiday-box {
      max-width: 80%;
      padding: 20px 0;
  }
  .holiday-box .item-box .item .c-title {
      font-size: 22px;
      padding: 10px 0;
  }
}
  
</style>

