<footer id="footer">
  <div class="footer {% if settings.footer_background == settings.background %}footer--bordered{% endif %}">
    <div class="container">
      <div class="footer__inner">

        <div class="footer__item-list top-section top-two-columns">
          {%- for block in section.blocks -%}
            {%- capture block_content -%}
              {%- case block.type -%}

                {%- when 'social_media' -%}
                
                  {%- if block.settings.sub_title != blank -%}
                    <p class="footer__item-subtitle">{{ block.settings.sub_title | escape }}</p>
                  {%- endif -%}
                
                  {%- if block.settings.title != blank -%}
                    <p class="footer__item-title heading">{{ block.settings.title }}</p>
                  {%- endif -%}
                

                  <div class="footer__item-content">
                    {%- if block.settings.content != blank -%}
                      {{- block.settings.content -}}
                    {%- endif -%}

                    {%- render 'social-media' -%}
                  </div>

                {%- when 'newsletter' -%}
                  {%- if block.settings.sub_title != blank -%}
                    <p class="footer__item-subtitle">{{ block.settings.sub_title | escape }}</p>
                  {%- endif -%}
                
                  {%- if block.settings.title != blank -%}
                    <p class="footer__item-title heading">{{ block.settings.title }}</p>
                  {%- endif -%}
                  
                
                  <div class="footer__item-content">
                    {%- if block.settings.content != blank -%}
                      <div class="newsletter-content">{{- block.settings.content -}}</div>
                    {%- endif -%}

                    {%- form 'customer', id: 'footer-newsletter', class: 'footer__newsletter-form form' -%}
                      {%- if form.posted_successfully? -%}
                        <div class="form__banner banner banner--success">
                          <span class="banner__ribbon">{% render 'icon' with 'form-success' %}</span>
                        </div>
                      {%- else -%}
                        {%- if form.errors -%}
                          <div class="form__banner banner banner--error">
                            <span class="banner__ribbon">{% render 'icon' with 'form-error' %}</span>
                            <p class="banner__content">{{ form.errors.translated_fields['email'] }} {{ form.errors.messages['email'] }}</p>
                          </div>
                        {%- endif -%}

                        <input type="hidden" name="contact[tags]" value="newsletter">

                        <div class="input">
                          <input type="email" id="footer[contact][email]" name="contact[email]" class="input__field input__field--text" required>
                          <label for="footer[contact][email]" class="input__label">Your email</label>
                          <button type="submit" class="input__submit-icon tap-area" title="submit">{% render 'icon' with 'nav-arrow-right', direction_aware: true %}</button>
                        </div>
                      {%- endif -%}
                    {%- endform -%}
                  </div>

                  {%- if block.settings.show_social_media != blank -%}
                    <div class="footer__item--newsletter-social-media">
                      {%- if block.settings.social_media_title != blank -%}
                        <p class="footer__item-title heading heading--small">{{ block.settings.social_media_title | escape }}</p>
                      {%- endif -%}
                    
                      <div class="footer__item-content">
                        {%- if block.settings.social_media_content != blank -%}
                          {{- block.settings.social_media_content -}}
                        {%- endif -%}

                        {%- render 'social-media' -%}
                      </div>
                    </div>
                  {%- endif -%}
              {%- endcase -%}
            {%- endcapture -%}

            {%- if block_content != blank -%}
              <div
                class="footer__item footer__item--{{ block.type | replace: '_', '-' }} footer__item--{{ block.settings.mobile_width }} {% if forloop.first %}is-first{% endif %}"
                {{ block.shopify_attributes }}
              >
                {{- block_content | replace: 'href="mailto:', 'rel="nofollow" href="mailto:' -}}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
        
        <div class="footer__item-list">
          {%- for block in section.blocks -%}
            {%- capture block_content -%}
              {%- case block.type -%}
                {%- when 'image' -%}
                  {%- if block.settings.image != blank -%}
                    {%- capture sizes_attribute -%}{{ block.settings.image_width }}px{%- endcapture -%}
                    {%- capture style_attribute -%}width: {{ block.settings.image_width }}px{%- endcapture -%}
                    {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', style: style_attribute, sizes: sizes_attribute, widths: '100,200,300,400,500,600', class: 'footer__image' -}}
                  {%- endif -%}

                {%- when 'text' -%}
                  {%- if block.settings.image != blank -%}
                    {%- capture sizes_attribute -%}{{ block.settings.image_width }}px{%- endcapture -%}
                    {%- capture style_attribute -%}width: {{ block.settings.image_width }}px{%- endcapture -%}
                    {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', style: style_attribute, sizes: sizes_attribute, widths: '100,200,300,400,500,600', class: 'footer__image' -}}
                  {%- endif -%}
                  {%- if block.settings.title != blank -%}
                    <p class="footer__item-title heading heading--small">{{ block.settings.title | escape }}</p>
                  {%- endif -%}

                  {%- if block.settings.content != blank -%}
                    <div class="footer__item-content">
                      {{- block.settings.content -}}
                    </div>
                  {%- endif -%}

                {%- when 'links' -%}
                  {%- assign menu = block.settings.menu -%}

                  {%- if menu != blank -%}
                    <p class="footer__item-title heading heading--small">
                        <span>{{ menu.title }}</span>
                        <span class="mb">
                          {%- render 'icon' with 'chevron' -%}
                          {%- render 'icon' with 'chevron-back' -%}
                        </span>
                    </p>

                    <div class="footer__item-content">
                      <ul class="linklist list--unstyled" role="list">
                        {%- for link in menu.links -%}
                          <li class="linklist__item">
                            <a href="{{ link.url }}" class="link" rel="nofollow" >{{ link.title }}</a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                  {%- endif -%}

                
              {%- endcase -%}
            {%- endcapture -%}

            {%- if block_content != blank -%}
              <div
                class="footer__item footer__item--{{ block.type | replace: '_', '-' }} footer__item--{{ block.settings.mobile_width }} {% if forloop.first %}is-first{% endif %}"
                {{ block.shopify_attributes }}
              >
                {{- block_content | replace: 'href="mailto:', 'rel="nofollow" href="mailto:' -}}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

      </div>
    </div>
  </div>

  {%- assign bottom_bar_content = section.settings.bottom_bar_content -%}
  {%- assign bottom_bar_menu = section.settings.bottom_bar_menu -%}

  {%- if section.settings.show_bottom_bar and bottom_bar_content != blank or bottom_bar_menu != blank -%}
    <div class="bottom-bar">
      <div class="container">
        <div class="bottom-bar__inner bottom-bar__mobile-align-{{ section.settings.bottom_bar_mobile_alignment }}">
          {%- if bottom_bar_content != blank -%}
            <div class="bottom-bar__content">
              {{- bottom_bar_content -}}
            </div>
          {%- endif -%}


          {%- assign payment_methods_config = settings.payment_methods | newline_to_br | split: '<br />' -%}
          {%- if section.settings.show_payment_icons
            and payment_methods_config != blank
            or shop.enabled_payment_types.size > 0
          -%}
            <div class="footer__payment-methods">
              <span class="footer__payment-methods-label text--xsmall text--subdued">
                we accept
              </span>

              <div class="payment-methods-list payment-methods-list--auto">
                {%- if payment_methods_config != blank -%}
                  {% for type in payment_methods_config %}
                    {{ type | strip | payment_type_svg_tag }}
                  {% endfor %}
                {%- else -%}
                  {% assign enabled_payment_types = 'american-express, google_pay, apple_pay, jcb, master, paypal, visa, discover, diners_club, amazon, shopify_pay' | remove: ' ' | split: ',' %}
                    {% for type in enabled_payment_types %}
                    {{ type | payment_type_svg_tag }}
                  {% endfor %}
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
          
          {%- if bottom_bar_menu != blank -%}
            <ul class="bottom-bar__navigation list--unstyled" role="list">
              {%- for link in bottom_bar_menu.links -%}
                <li class="bottom-bar__navigation-item">
                  <a href="{{ link.url }}" class="link" rel="nofollow">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
    </div>
  {%- endif -%}
</footer>

{%- if section.settings.show_cookie_bar -%}
  <cookie-bar section="{{ section.id }}" hidden class="cookie-bar text--xsmall">
    {%- if section.settings.cookie_bar_title != blank -%}
      <p class="heading heading--xsmall">{{ section.settings.cookie_bar_title }}</p>
    {%- endif -%}

    {%- if section.settings.cookie_bar_content != blank -%}
      {{- section.settings.cookie_bar_content -}}
    {%- endif -%}

    <div class="cookie-bar__actions">
      <button class="button button--text button--primary button--small text--xsmall" data-action="accept-policy">
        {{ 'footer.cookie_bar.accept' | t }}
      </button>
      <button class="button button--text button--ternary button--small text--xsmall" data-action="decline-policy">
        {{ 'footer.cookie_bar.decline' | t }}
      </button>
    </div>
  </cookie-bar>
{%- endif -%}




<script>
window.addEventListener('DOMContentLoaded', function() {
  
    {% comment %} 底部导航收展 {% endcomment %}
	$('.footer__item-list .footer__item').on('click', function(){
        if($(this).hasClass('active')){
            $(this).removeClass('active');
        }else{
            $(this).addClass('active');
        }
    });

    /* 订阅成功 */
    const currentUrl = window.location.href;
    if(currentUrl.indexOf('footer-newsletter') != -1){
      //$('.footer__newsletter-form .input').hide();
      $('.footer__newsletter-form').append('<p class="newsletter-success__content">You have been registered to our newsletter.</p>');
    }
});
</script>
          
