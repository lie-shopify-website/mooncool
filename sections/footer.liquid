<style>

  footer#footer {
      background: #f5f4e9;
      background-position: center bottom;
      background-size: contain;
      padding: 50px 0 20px;
      margin-top: 50px;
  }
  
  footer .footer .select,
  footer .footer .input__field {
    border: 1px solid rgba(var(--border-color));
  }

  footer .footer .input__field {
    padding-right: 50px;
  }
  footer .container {
      --container-max-width: 1560px;
      width: 100%;
      max-width:var(--container-max-width);
      margin-left:auto;
      margin-right:auto;
      padding: 0 40px;
  }
  footer img {
    margin:unset;
  }
  .footer__item-list {
      display: grid;
      grid-gap: 40px;
      gap: 40px;
      grid-template-columns: 1fr 1fr;
  }
  .footer ul.social-media {
      display: flex;
      flex-wrap: wrap;
      list-style: none;
      padding: 0;
      margin: 0;
  }

  .footer ul.social-media li.social-media__item {
      width: 45px;
      height: 45px;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
  }


    .social-media__item:before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: calc(100% + 1px);
        height: calc(100% + 1px);
        background: currentColor;
        -webkit-clip-path: circle(0% at 50% 50%);
        clip-path: circle(0% at 50% 50%);
        transform: scale(0);
        transform-origin: center;
        transition: transform .4s cubic-bezier(.215,.61,.355,1), -webkit-clip-path .4s cubic-bezier(.215,.61,.355,1);
        transition: transform .4s cubic-bezier(.215,.61,.355,1), clip-path .4s cubic-bezier(.215,.61,.355,1);
        transition: transform .4s cubic-bezier(.215,.61,.355,1), clip-path .4s cubic-bezier(.215,.61,.355,1), -webkit-clip-path .4s cubic-bezier(.215,.61,.355,1);
        pointer-events: none;
        z-index: 1;
        border-radius: 5px;
    }
    .social-media__item:hover:before {
        -webkit-clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
        transform: scale(1);
        background: #735336;
    }
    footer .footer a.social-media__link {
        font-size: 14px;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 45px;
        width: 45px;
        color: currentColor;
        z-index: 1;
        transition: color .3s cubic-bezier(.215,.61,.355,1);
    }
    .footer__item-list ul.linklist {
        list-style: none;
        margin: 0;
        padding: 0;
    }
  
    footer .footer .linklist__item a.link {
        font-size: 13px;
        text-decoration: auto;
    }
  @media screen and (min-width: 1000px) {
      .footer__item-list {
          grid-auto-flow: column;
          grid-template-columns: none;
      }
  }
  .footer__item-list {
      grid-template-columns: repeat(4, 1fr);
  }
  
  .footer__item-title {
        margin-bottom: 20px;
  }
  .footer .icon {
      display: block;
      vertical-align: middle;
      background: none;
      pointer-events: none;
      overflow: visible;
  }
  .footer__item-list.top-section {
      border-bottom: 3px solid #E56321;
      margin-bottom: 40px;
      padding-bottom: 20px;
  }
  .footer__item-list {
      grid-template-columns: repeat(4, 1fr);
  }
  .footer__item-list .newsletter-content {
