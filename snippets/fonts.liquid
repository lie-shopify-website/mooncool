<link rel="preload" as="font" href="{{ 'Inter_18pt-Bold.ttf' | asset_url }}" type="font/ttf" crossorigin="anonymous" />
<link rel="preload" as="font" href="{{ 'Inter_18pt-Regular.ttf' | asset_url }}" type="font/ttf" crossorigin="anonymous" />

{% style %}
    @font-face {
        font-family: 'Inter';
        src: url('{{ 'Inter_18pt-Regular.ttf' | asset_url }}') format('truetype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: 'Inter';
        src: url('{{ 'Inter_18pt-Bold.ttf' | asset_url }}') format('truetype');
        font-weight: bold;
        font-style: normal;
        font-display: swap;
    }

    @media (min-width: 768px) {
        :root {
            --safe-width: 728px;
        }
    }

    @media (min-width: 1280px) {
        :root {
            --safe-width: 1200px;
        }
    }

    @media (min-width: 1440px) {
        :root {
            --safe-width: 1360px;
        }
    }

    @media (min-width: 1520px) {
        :root {
            --safe-width: 1440px;
        }
    }

    @media (min-width: 1920px) {
        :root {
            --safe-width: 1700px;
        }
    }

    .safe-container {
        width: 100%;
        max-width: var(--safe-width);
        margin-left: auto;
        margin-right: auto;
    }

    @media (min-width: 768px) {
        .mbbr {
            display:none;
        }
    }
    @media (max-width: 767px) {
        .pcbr {
            display:none;
        }
    }

{% endstyle %}
